{
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [".git", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",
    "preserveValueImports": true,
    "declaration": true,
    "baseUrl": "."
  }
}
